<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#4D9CD6A8"
                android:centerColor="#4D8DBEC5"
                android:endColor="#4DD597D5"
                android:angle="315"
                />
            <corners android:radius="10dp"/>
            <stroke android:width="2dp" android:color="#282733"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#4D54FF77"
                android:centerColor="#4D40DAED"
                android:endColor="#4DEE82EE"
                android:angle="315"
                />
            <corners android:radius="10dp"/>
            <stroke android:width="2dp" android:color="#282733"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#54FF77"
                android:centerColor="#40DAED"
                android:endColor="#ee82ee"
                android:angle="315"
                />
            <corners android:radius="10dp"/>            <stroke android:width="2dp" android:color="#282733"/>
        </shape>
    </item>
</selector>